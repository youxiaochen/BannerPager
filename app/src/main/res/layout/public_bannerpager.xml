<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <you.chen.bannerlibrary.BannerPager
        android:id="@+id/bp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bannerOrientation="vertical"/>

    <you.chen.bannerlibrary.BannerIndicator
        android:id="@+id/bi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        app:indicatorOrientation="vertical"
        app:indicatorDrawable="@drawable/bg_test_banner2"
        app:indicatorMargin="8dp"/>

</RelativeLayout>